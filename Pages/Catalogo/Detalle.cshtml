@page
@model TallerCORE.Pages.Catalogo.DetalleModel

@{
    ViewData["Title"] = "Detalle";
}

@if (Model.Producto != null)
{
    <h1>Datos de '@Model.Producto.Nombre'</h1>

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Producto.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Producto.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Producto.Descripcion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Producto.Descripcion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Producto.Precio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Producto.Precio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Producto.CategoriaNavigation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Producto.CategoriaNavigation.Nombre)
            </dd>
        </dl>
    </div>
} else {
    <h1>Datos del producto</h1>
    <div class="alert alert-danger">No se han encontrado datos</div>
}
<div>
    @*<a asp-page="./Edit" asp-route-id="@Model.Producto?.Id">Edit</a> |*@
    <a asp-page="./Catalogo">Volver al catálogo</a>
</div>
